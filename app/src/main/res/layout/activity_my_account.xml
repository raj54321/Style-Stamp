<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"

    >

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editName"
        android:layout_below="@id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/txtEmail"
        android:layout_below="@id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Email"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_below="@id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="example@example.com"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtphonenumber"
        android:layout_below="@id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Phone Number"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editphonenumber"
        android:layout_below="@id/txtphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="1352153136"
        android:inputType="text|phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtDeliveryInfo"
        android:layout_below="@id/editphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Delivery Information"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editDeliveryInfo"
        android:layout_below="@id/txtDeliveryInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="2100 bubenpark  xkknm njncdmncmnj nm"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtPaymentInfo"
        android:layout_below="@id/editDeliveryInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Payment Methods"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/edittxtPaymentInfo"
        android:layout_below="@id/txtPaymentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="VISA  ending in 8950"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_below="@id/edittxtPaymentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Back"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#fff"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>