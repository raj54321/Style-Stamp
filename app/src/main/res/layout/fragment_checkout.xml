<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPurchase"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Name"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/editName"
                android:layout_below="@id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="John Doe"
                android:inputType="textPersonName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/txtEmail"
                android:layout_below="@id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Email"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/editEmail"
                android:layout_below="@id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="example@example.com"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txtphonenumber"
                android:layout_below="@id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Phone Number"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/editphonenumber"
                android:layout_below="@id/txtphonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="1352153136"
                android:inputType="phone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_below="@id/editphonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Address"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/editAddress"
                android:layout_below="@id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="123 Rue Thanksville"
                android:inputType="textPostalAddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txtDeliveryInfo"
                android:layout_below="@id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Delivery Information"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/editDeliveryInfo"
                android:layout_below="@id/txtDeliveryInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="2100 bubenpark  xkknm njncdmncmnj nm"
                android:inputType="text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txtPaymentInfo"
                android:layout_below="@id/editDeliveryInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Payment Methods"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/edittxtPaymentInfo"
                android:layout_below="@id/txtPaymentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="VISA  ending in 8950"
                android:inputType="text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txtDeliveryMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Delivery Method"
                android:textSize="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"
                android:layout_below="@+id/edittxtPaymentInfo"/>

            <CheckBox
                android:id="@+id/chkDeliveryMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/AppTheme"
                android:typeface="monospace"
                android:text="Standard (7 - 10 days)"
                android:textSize="20dp"
                android:layout_below="@+id/txtDeliveryMethod">

            </CheckBox>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnPurchase"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Purchase"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#fff"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>