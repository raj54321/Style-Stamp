<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rltvnavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Profile"
            android:gravity="center"
            android:background="#c6c6c6"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnMyAccount"
        android:layout_below="@+id/rltvnavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerInParent="true"
        android:text="My Account"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="#c2c2c2"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnorderhistory"
        android:layout_below="@id/btnMyAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerInParent="true"
        android:text="Order History"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="#c2c2c2"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtHelp"
        android:layout_below="@id/btnorderhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help &amp; Info ->"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/txtChangePassword"
        android:layout_below="@id/txtHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password ->"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>


    <TextView
        android:id="@+id/txtlogout"
        android:layout_below="@id/txtChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

</RelativeLayout>