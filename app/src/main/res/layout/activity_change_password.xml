<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Current Password"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_below="@id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="***************"
        android:inputType="textWebPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/txtNewPassword"
        android:layout_below="@id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="New Password"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editNewPassword"
        android:layout_below="@id/txtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="example@example.com"
        android:inputType="textWebPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtRetypepassword"
        android:layout_below="@id/editNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Re-Type Password"
        android:textSize="20dp"
        android:textAppearance="@style/AppTheme"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/editRetypepassword"
        android:layout_below="@id/txtRetypepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="1352153136"
        android:inputType="textWebPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnPasswordUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/editRetypepassword"
        android:text="Change Password"
        android:textAllCaps="false"/>


</RelativeLayout>